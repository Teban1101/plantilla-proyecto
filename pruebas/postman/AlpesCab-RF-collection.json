{
  "info": {
    "name": "AlpesCab - RF Collection",
    "_postman_id": "a1b2c3d4-e5f6-4012-9876-abcdef123456",
    "description": "Collection to test the 11 RF endpoints of the AlpesCab application (chained, with assertions).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "RF1 - Registrar Ciudad",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombreCiudad\": \"PruebaCiudad\",\n  \"pais\": \"Colombia\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/ciudades", "host": ["{{baseUrl}}"], "path": ["api","ciudades"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 201', function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json();",
              "pm.environment.set('ciudadNombre', json.nombreCiudad || 'PruebaCiudad');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
